{
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm test:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(npm run format:*)",
      "Bash(npx prettier:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.md ]]; then npx prettier --write \"$FILE_PATH\" 2>/dev/null || true; fi",
            "statusMessage": "Formatting markdown file..."
          }
        ]
      }
    ]
  }
}
